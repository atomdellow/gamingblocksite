{
  "name": "console-gaming-blog",
  "version": "1.0.0",
  "description": "A blog site dedicated to console gaming",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && cd client && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "18.17.1",
    "npm": "10.9.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
